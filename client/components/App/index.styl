.app

  &__header
    position: relative
    height: 160px
    background: #607d8b
    box-shadow: 0 2px 6px rgba(#000, 0.2)

  &__create-button
    position: absolute
    bottom: -25px
    right: 7%

    font-size: 40px
    line-height: 56px

    height: 56px
    width: 56px
    border-radius: 50%

    text-align: center

    color: #fff
    background: #ffc107
    box-shadow: 0 3px 10px rgba(#000, 0.23), 0 3px 10px rgba(#000, 0.16);
    cursor: pointer
    user-select: none

    transition: all 0.2s ease

    &:hover
      transform: scale(1.2) rotate(90deg)

  &__content
    position: relative

    box-sizing: border-box
    width: 70%
    max-width: 1280px
    margin: -95px auto 50px
    border-radius: 2px

    background: #fff
    box-shadow: 0 2px 5px 0 rgba(#000, 0.26)
