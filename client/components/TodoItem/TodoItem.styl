@require '../../styles/variables.styl'

.wrap
  position: relative
  overflow: hidden
  height: 62px
  border-bottom: 1px solid $divider-color

.common
  position: absolute
  top: 0
  bottom: 0
  left: 0

  display: flex
  align-items: center
  box-sizing: border-box
  width: 100%
  padding: 6px 24px

  background: #FFF

  transition: left 0.3s

  &:hover .delete
    opacity: 1

.completed
  composes: common

  & .text
    text-decoration: line-through
    color: $text-color-secondary

.content
  display: flex
  align-self: stretch
  flex-grow: 1
  margin: 0 28px
  overflow: hidden
  cursor: pointer

.text
  align-self: center
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden
  max-width: 100%
  transition: color 0.3s

.toggler
  position: relative
  width: 20px
  height: 20px
  outline: none
  cursor: pointer
  appearance: none

  &:before
    content: ""
    position: absolute
    left: 0
    width: 16px
    height: 16px
    border: 2px solid #6D6D6D
    transition: all 0.1s ease-in-out

  &:checked:before
    height: 8px
    border-color: #009688
    border-top-style: none
    border-right-style: none
    transform: rotate(-45deg)

.delete
  cursor: pointer
  color: #ccc

  opacity: 0
  transition: opacity 0.3s, color 0.3s

  &:hover
    color: #6D6D6D

.editWrap
  flex-grow: 1
  box-sizing: border-box
  height: 100%
  padding: 21px 71px

.editField
  width: 100%
  border: none
  outline: none
